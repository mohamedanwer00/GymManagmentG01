@model TrainerToUpdateViewModel
<!DOCTYPE html>
<html lang="en">


<body>
    <div class="container">
        <main role="main" class="pb-3">

            <div class="container mt-4">
                <header class="mb-4">
                    <h3 class="text-primary-color">Edit Trainer</h3>
                    <p class="text-muted">Update trainer information</p>
                </header>

                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card shadow-sm border-0">
                            <div class="card-body p-4">
                                <div class="mb-4 pb-3 border-bottom">
                                    <small class="text-muted d-block mb-1">Editing Profile For</small>
                                    <h4 class="mb-0 text-black">@Model.Name</h4>
                                </div>
                                <form asp-action="TrainerEdit" asp-controller="Trainer" method="post">
                                    <input hidden asp-for="Name" />
                                    <!-- Personal Information -->
                                    <div class="section-header mb-3">
                                        <h5 class="text-primary fw-bold">Personal Information</h5>
                                        <hr class="mt-2">
                                    </div>
                                    <div class="row g-3 mb-4">


                                        <div class="col-md-6">
                                            <label class="form-label">Email Address</label>
                                            <input asp-for="Email" type="text" class="form-control" />
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Phone</label>
                                            <input asp-for="Phone" type="text" class="form-control" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">BuildingNumber</label>
                                            <input asp-for="BuildingNumber" type="text" class="form-control" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Street</label>
                                            <input asp-for="Street" type="text" class="form-control" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">City</label>
                                            <input asp-for="City" type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <!-- Professional Information -->
                                    <div class="section-header mb-3">
                                        <h5 class="text-primary fw-bold">Professional Information</h5>
                                        <hr class="mt-2">
                                    </div>
                                    <div class="row g-3">

                                        <div class="col-12">
                                            <label class="form-label fw-semibold">
                                                Specializations <span class="text-danger">*</span>
                                            </label>

                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" asp-for="Specialities"
                                                       value="GeneralFitness" />
                                                <label class="form-check-label">GeneralFitness</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" asp-for="Specialities"
                                                       value="Yoga" />
                                                <label class="form-check-label">Yoga</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" asp-for="Specialities"
                                                       value="Boxing" />
                                                <label class="form-check-label">Boxing</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" asp-for="Specialities"
                                                       value="CrossFit" />
                                                <label class="form-check-label">CrossFit</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                                        <a asp-action="Index" class="btn btn-outline">
                                            <i class="bi bi-arrow-left me-1"></i>Cancel
                                        </a>
                                        <button type="submit" class="btn btn-fill">
                                            <i class="bi bi-check-lg me-1"></i>Update Trainer
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </main>
    </div>

    <script src="../js/jquery.validate.min.js"></script>
    <script src="../js/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>